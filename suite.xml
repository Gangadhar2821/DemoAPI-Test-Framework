<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Demo Bank API Test Suite" parallel="false">

	<!-- Listeners -->
	<listeners>
		<listener class-name="com.api.listeners.TestListener" />
	</listeners>

	<test thread-count="5" name="API_Test">
		<classes>
			<class name="com.api.tests.CreateUserAPITest" />
			<class name="com.api.tests.GetUserAPITest" />
			<class name="com.api.tests.UpdateUserAPITest" />
			<class name="com.api.tests.DeleteUserAPITest" />

		</classes>
	</test>

</suite>
